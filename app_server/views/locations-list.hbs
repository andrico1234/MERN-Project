<div class="location-wrapper">
    <header>
        <h1>{{title}}</h1>
        <p>{{subtitle}}</p>
    </header>

    <div class="location-list-sidebar-wrapper">
        <div class="list-wrapper">
            {{#each locations}}
                <div class="list-item">
                    <h3 class="name">{{name}}</h3>
                    <p class="address">{{address}}</p>
                    {{#each facilities}}<span>{{facility}}</span>{{/each}}
                    <p class="stop">No.{{stop}}</p>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="sidebar">
        <p class="sidebar-content">{{sidebar}}</p>
    </div>
</div>