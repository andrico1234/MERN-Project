<div class="location-review-form-wrapper">
    <header>
        <h1>Review {{title}}</h1>
    </header>

    <div class="form-wrapper">
        <form class="review-form" action="" method="post" role="form">
            <fieldset>
                <label for="name">Name</label>
                <input placeholder="Required" type="text" id="name" name="name"
                       aria-required="true" pattern="[A-Za-z-0-9]+\s[A-Za-z-'0-9]+">

                <label for="rating">Rating</label> <select id="rating">
                <option value="5">5</option>
                <option value="4">4</option>
                <option value="3">3</option>
                <option value="2">2</option>
                <option value="1">1</option>
            </select>

                <label for="review">Review</label> <textarea name="review" rows="5"></textarea>
                <button type="submit" value="Submit">Add My Review</button>
            </fieldset>
        </form>
    </div>
</div>